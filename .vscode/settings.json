{
    "editor.wordWrap"      : "on",
    "editor.wrappingIndent": "none",

    "editor.autoClosingBrackets": "never",
    "editor.formatOnType": false,
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "off"
    },
    "editor.suggestOnTriggerCharacters": false,

    "editor.acceptSuggestionOnEnter": "on",

    "breadcrumbs.enabled": false,
    "editor.glyphMargin": true, // I need this on for breakpoints
    "editor.folding": false,
    "editor.lineNumbers": "off",
    
    "C_Cpp.errorSquiggles": "Disabled",

    "workbench.colorCustomizations": {
        "editor.background": "#042327"
    },
    "editor.tokenColorCustomizations": {
        "comments": "#31B72C",
        "keywords": "#FFFFFF",
        "textMateRules": [
            {
                "name": "Primitive_Types",
                "scope": [
                    "storage.type.primitive.cpp",
                    "storage.type.built-in.primitive.cpp",
                ],
                "settings": {
                    "foreground": "#FFFFFF"
                }
            },
            {
                "name": "User_Types",
                "scope": [
                    "entity.name.type",
                ],
                "settings": {
                    "foreground": "#9DE3C0"
                }
            },
            {
                "name": "Keywords",
                "scope": [
                    "keyword.other.using",
                    "keyword.control"
                ],
                "settings": {
                    "foreground": "#FFFFFF"
                }
            },
            {
                "name": "Punctiation",
                "scope": [
                    "punctuation",
                    "storage.modifier.pointer.cpp"
                ],
                "settings": {
                    "foreground": "#FFFFFF"
                }
            },
            {
                "name": "String",
                "scope": [
                    "string",
                    "punctuation.definition.string.end.cpp",
                    "punctuation.definition.string.begin.cpp"
                ],
                "settings": {
                    "foreground": "#2ca198"
                }
            },
            {
                "name": "Standard",
                "scope": [
                    "variable",
                    "function",
                    "variable.other.property.cpp",
                    "variable.other.global.cpp",
                    "entity.name.function",
                    "keyword.control.directive.include.cpp",
                    "keyword.control.directive.conditional.ifndef.cpp",
                    "keyword.control.directive.define.cpp",
                    "keyword.control.directive.endif.cpp",
                    "entity.name.function.preprocessor",
                    "variable.parameter.preprocessor.cpp",
                    "meta.parens.cpp",
                    "meta.block.cpp",
                    "meta.body.function.definition.cpp",
                ],
                "settings": {
                    "foreground": "#b0bfc6"
                }
            },
            {
                "name": "Placeholder",
                "scope": [
                    "constant.other.placeholder"
                ],
                "settings": {
                    "foreground": "#36d8aa"
                }
            },
            {
                "name": "Parameters",
                "scope": [
                    "variable.parameter.cpp"
                ],
                "settings": {
                    "foreground": "#999999"
                }
            },
            {
                "name": "Escape_Char",
                "scope": [
                    "constant.character.escape",
                ],
                "settings": {
                    "foreground": "#2cf198"
                }
            },
            {
                "name": "Constants",
                "scope": [
                    "constant.numeric",
                    "constant.language",
                    "variable.other.enummember",
                ],
                "settings": {
                    "foreground": "#70c5bf"
                }
            },
            {
                "name": "Label",
                "scope": [
                    "entity.name.label.cpp"
                ],
                "settings": {
                    "foreground": "#70c5bf"
                }
            },
            {
                "name": "Overloaded_Operator",
                "scope": [
                    "entity.name.function.operator.member",
                ],
                "settings": {
                    "foreground": "#fcaa5d"
                }
            },
        ]
    },
    
    "files.associations": {
        "*.txt": "cpp",
        "xiosbase": "cpp",
        "xstring": "cpp",
        "cmath": "cpp",
        "xlocale": "cpp",
        "system_error": "cpp",
        "cstdlib": "cpp",
        "cstdio": "cpp",
        "tuple": "cpp",
        "general.h": "c",
        "gl.h": "c",
        "algorithm": "cpp",
        "array": "cpp",
        "chrono": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstring": "cpp",
        "cwchar": "cpp",
        "exception": "cpp",
        "initializer_list": "cpp",
        "ios": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "iterator": "cpp",
        "limits": "cpp",
        "memory": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "random": "cpp",
        "ratio": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "string": "cpp",
        "type_traits": "cpp",
        "typeinfo": "cpp",
        "utility": "cpp",
        "vector": "cpp",
        "xfacet": "cpp",
        "xlocinfo": "cpp",
        "xlocnum": "cpp",
        "xmemory": "cpp",
        "xmemory0": "cpp",
        "xstddef": "cpp",
        "xtr1common": "cpp",
        "xutility": "cpp"
    }
}